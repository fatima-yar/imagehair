---
import data from '../portfolio.json'

interface Portfolio {
  url: string;
}
interface Data {
  [key: string]: Portfolio[];
}

const portfolioData: Data = data
---



 
<div class="bg-gradientDown ml-8 mr-8 lg:ml-56 lg:mr-56 rounded-lg">
  
  {Object.keys(data).map((category,i)=>
  <div class="grid  mx-auto justify-center pt-20  font-cantora text-lg lg:text-4xl" id={category}>{category}
  <div>
  <ul class="grid grid-cols-1 md:grid-col-span-3 md-lg:gap-8 md-lg:grid-cols-3 lg:grid-cols-4 grid-rows-1 sm:grid-cols-2 gap-6 lg:gap-16 p-10 ">
    {portfolioData[category].map((pic,i)=>(

<li class="border-4 rounded-lg border-brightPink"><img src={pic.url} class="w-40" alt="pic"/>

</li>

))}
  </ul>
  </div>
  </div>
  )
  }
  </div>
</div>

