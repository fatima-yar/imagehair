---
import GoogleMap from "./UI/GoogleMap.astro"
import Logo from "./UI/Logo.astro"
import Opening from "./UI/Opening.astro"
---
<div class="bg-red-600 ">
  <div class="flex flex-col lg:flex-row bg-white lg:ml-24 lg:mr-24 pt-8 pb-8 lg:pl-8">
    <div class="mb-4 lg:mb-0 pl-4">
      <Opening/>
    </div>
    <div class="flex mx-auto justify-center mb-4 lg:mb-0">
      <GoogleMap/>
    </div>
    <div class="lg:pr-16 flex lg:ml-auto justify-end flex-col items-center">
      <Logo size="h-40 w-40"/>
      <span class="text-center pt-4">2 Dunrobin Place Cnr Pakuranga Road, Halfmoon Bay</span>
    </div>
  </div>
</div>


